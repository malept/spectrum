{
  "name": "Spectrum",
  "description": "The community platform for the future.",
  "homepage": "https://spectrum.chat",
  "author": {
    "name": "Space Program Inc.",
    "email": "hi@spectrum.chat"
  },
  "license": "BSD-3-Clause",
  "repository": "https://github.com/withspectrum/spectrum",
  "version": "1.0.5",
  "main": "src/main.js",
  "private": true,
  "dependencies": {
    "electron-context-menu": "^0.10.1",
    "electron-is-dev": "^1.0.1",
    "electron-log": "^2.2.17",
    "electron-squirrel-startup": "^1.0.0",
    "electron-window-state": "^5.0.3",
    "update-electron-app": "^1.3.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.32",
    "@electron-forge/maker-deb": "6.0.0-beta.32",
    "@electron-forge/maker-dmg": "6.0.0-beta.32",
    "@electron-forge/maker-rpm": "6.0.0-beta.32",
    "@electron-forge/maker-squirrel": "6.0.0-beta.32",
    "@electron-forge/maker-zip": "6.0.0-beta.32",
    "electron": "3.1.3"
  },
  "resolutions": {
    "event-stream": "3.3.4"
  },
  "scripts": {
    "package": "electron-forge package",
    "package:mac": "yarn run make --platform darwin",
    "package:linux": "yarn run make --platform linux",
    "package:win": "yarn run make --platform win32 --arch x64",
    "publish": "electron-forge publish",
    "start": "electron-forge start",
    "make": "electron-forge make"
  },
  "config": {
    "forge": {
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Spectrum"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "categories": [
              "Network"
            ],
            "icon": "resources/icons/icon-512x512.png"
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "categories": [
              "Network"
            ],
            "icon": "resources/icons/icon-512x512.png"
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "background": "resources/background.tiff",
            "contents": [
              {
                "type": "file",
                "x": 158,
                "y": 213
              },
              {
                "path": "/Applications",
                "type": "link",
                "x": 385,
                "y": 213
              }
            ],
            "iconTextSize": 14
          }
        }
      ],
      "packagerConfig": {
        "appBundleId": "chat.spectrum",
        "appCategoryType": "public.app-category.social-networking",
        "appCopyright": "Copyright Â© 2018 Space Program Inc.",
        "icon": "resources/icons/icon"
      },
      "publishers": [
        {
          "config": {
            "repository": {
              "name": "spectrum",
              "owner": "withspectrum"
            }
          },
          "name": "@electron-forge/publisher-github"
        }
      ]
    }
  }
}
